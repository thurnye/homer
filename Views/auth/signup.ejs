<%- include('../includes/head.ejs') %>
</head>
<body>
        <%- include('../includes/navigation.ejs') %>
    <%if (errorMessage) { %>
        <div class="err-message">
            <h5><%=errorMessage %> </h5>
        </div>
    <% } %>
    <section class="form-data">
        <form action="/signup" class="form-items" method="POST">

            
            <label for="name">
                <div class="form-list">
                    <h3>First Name:</h3>
                    <input type="text" name="firstName"  value="<%=OldUserInput.firstName %>" />
                    <h3>Last Name:</h3>
                    <input type="text" name="lastName"  value="<%=OldUserInput.lastName%>" />
                </div>
            </label>

            <hr>

            <label for="email">
                <div class="form-list">
                    <h3>Email:</h3>
                    <input type="email" 
                    name="email" 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"  value="<%= OldUserInput.email%>" />
                </div>
            </label>

            <label for="password">
                    <div class="form-list">
                        <h3>Password:</h3>
                        <input type="password" 
                        name="password" 
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"  
                        value="<%= OldUserInput.password %>" />
                    </div>
            </label>
            <button class="btn" type="submit">Submit</button>
        </form>
    </section>
    
    <%- include('../includes/head.ejs') %>






    